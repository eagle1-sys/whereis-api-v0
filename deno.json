{
  "unstable": ["cron"],
  "tasks": {
    "check": "deno lint && deno check .",
    "initkey": "deno task check && deno run --allow-env --allow-read --allow-net --allow-ffi db/init_key.ts",
    "test": "deno task check && deno test --allow-env --allow-read --allow-net tests/main-test.ts"
  },
  "imports": {
    "@std/dotenv": "jsr:@std/dotenv",
    "@std/assert": "jsr:@std/assert",
    "@std/crypto": "jsr:@std/crypto",
    "@std/jsonc": "jsr:@std/jsonc",
    "@std/path": "jsr:@std/path",
    "@std/bytes": "jsr:@std/bytes",
    "@std/fmt": "jsr:@std/fmt",
    "@std/encoding": "jsr:@std/encoding",
    "hono": "jsr:@hono/hono@^4",
    "postgresjs": "https://deno.land/x/postgresjs/mod.js",
    "@cross/log": "jsr:@cross/log",
    "sqlite": "jsr:@db/sqlite"
  },
  "nodeModulesDir": "none"
}
