# Environment Configuration Template for Whereis API (Deno Application)
# 
# This file serves as a template for configuring environment variables.
# Copy this file to '.env' and update the placeholder values with your actual configuration.
#
# Usage with Deno:
#   - Use --allow-env flag when running your application
#
# Note: Some default values are defined in config.ts and can be overridden here.

# =============================================================================
# Application Settings
# =============================================================================

# Auto-pull interval in minutes for logistics data
# APP_PULL_INTERVAL=5

# Application environment ( dev | qa | prod )
APP_ENV=dev

# =============================================================================
# Database Configuration (PostgreSQL)
# =============================================================================

# Database connection settings (uncomment to override defaults)
# DB_PORT=5432
# DB_NAME=whereis

# Required database credentials
DB_HOST=YOUR_DATABASE_HOST
DB_USER=YOUR_DATABASE_USER
DB_PASSWORD=YOUR_DATABASE_PASSWORD

# =============================================================================
# Logistics Provider APIs
# =============================================================================

# FedEx API credentials
FDX_CLIENT_ID=YOUR_FEDEX_CLIENT_ID
FDX_CLIENT_SECRET=YOUR_FEDEX_CLIENT_SECRET

# SF Express API credentials
SFEX_PARTNER_ID=YOUR_SF_EXPRESS_PARTNER_ID
SFEX_CHECK_WORD=YOUR_SF_EXPRESS_CHECK_WORD

# =============================================================================
# Development & Testing
# =============================================================================

# Testing environment configuration
TESTING_URL=YOUR_TESTING_URL
TESTING_TOKEN=YOUR_TESTING_TOKEN
